{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Redis": "localhost:6379, abortConnect=false"
    },
    "LimitRulesOptions": {
        "Rules": [
            {
                "Domain": "weather",
                "Description": {
                    "Action": "forecast",
                    "Unit": "Minute",
                    "RequestsPerUnit": 5
                }
            }
        ]
    }
}
